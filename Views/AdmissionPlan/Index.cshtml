@model IEnumerable<StudentOffice.Models.DataBase.AdmissionPlan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Приемная комиссия</h1>

<p>
    <a asp-action="Create">Добавить новую</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelectionСommittee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectionСommittee.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdmissionPlanId">Редактировать</a><br>
                <a asp-action="Details" asp-route-id="@item.AdmissionPlanId">Подробнее</a><br>
                <a asp-action="Delete" asp-route-id="@item.AdmissionPlanId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
