@model StudentOffice.Models.DataBase.TypeOfSpravka

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.TypeOfSpravkaId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypeOfSpravkaId" />
            <div class="form-group">
                <label asp-for="TypeOfSpravkaName" class="control-label"></label>
                <input asp-for="TypeOfSpravkaName" class="form-control" />
                <span asp-validation-for="TypeOfSpravkaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/notify.min.js" asp-append-version="true"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    