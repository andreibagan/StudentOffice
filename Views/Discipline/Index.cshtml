@model IEnumerable<StudentOffice.Models.DataBase.Discipline>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 align="center">Список дисциплин</h3>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisciplineShortName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineShortName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DisciplineId" class="btn btn-info">Изменить</a>
                <a asp-action="Delete" asp-route-id="@item.DisciplineId" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
