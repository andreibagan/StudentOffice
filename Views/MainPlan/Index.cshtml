@model IEnumerable<StudentOffice.Models.DataBase.MainPlan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmissionPlan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionPlan.GetName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MainPlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MainPlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MainPlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
