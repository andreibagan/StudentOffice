@model StudentOffice.Models.DataBase.MainPlan
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>Редактирование</h1>*@

<h4 align="center">Выберите день и время посещения</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MainPlanId" />
            @*<input type="hidden" asp-for="DateTimeNow" />*@
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="AdmissionPlanId" class="control-label"></label>
                    <select asp-for="AdmissionPlanId" class="form-control" asp-items="ViewBag.AdmissionPlanId"></select>
                    <span asp-validation-for="AdmissionPlanId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input type="datetime" asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="@Model.User.Anketa.Specialty.Branch" class="control-label"></label>
                    <input asp-for="@Model.User.Anketa.Specialty.Branch" disabled class="form-control" />
                    <span asp-validation-for="@Model.User.Anketa.Specialty.Branch" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="@Model.User.Anketa.Specialty.Name" class="control-label"></label>
                    <input asp-for="@Model.User.Anketa.Specialty.Name" disabled class="form-control" />
                    <span asp-validation-for="@Model.User.Anketa.Specialty.Name" class="text-danger"></span>
                </div>

            </div>
        </form>
    </div>
</div>