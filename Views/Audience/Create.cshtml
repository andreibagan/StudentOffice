@model StudentOffice.Models.DataBase.Audience

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 align="center">Добавление аудитории</h3>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AudienceName" class="control-label"></label>
                <input asp-for="AudienceName" class="form-control" />
                <span asp-validation-for="AudienceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AudienceNameShort" class="control-label"></label>
                <input asp-for="AudienceNameShort" class="form-control" />
                <span asp-validation-for="AudienceNameShort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AudienceType" class="control-label"></label>
                <select asp-for="AudienceType" class="custom-select"  asp-items="Html.GetEnumSelectList<AudienceType>()" ></select>
                <span asp-validation-for="AudienceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary btn-block" />
            </div>
        </form>
        <form>
            <button style="margin-top: 10px" class="btn btn-warning btn-block" method="get" asp-controller="Home" asp-action="Index">Вернуться на главную страницу</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
