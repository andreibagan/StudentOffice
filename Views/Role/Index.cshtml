@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h3 align="center">Список ролей</h3>
<hr />
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-primary">Добавить роль</a>
<a asp-action="UserList" class="btn btn-info">Список пользователей</a>
<form>
    <button style="margin-top: 10px" class="btn btn-warning btn-block" method="get" asp-controller="Home" asp-action="Index">Вернуться на главную страницу</button>
</form>